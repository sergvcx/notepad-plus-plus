<NotepadPlus>			
	<functionList>
		<!-- ======================================================= [ OpenSCAD ] -->
		<parser id         ="scad_function" displayName="OpenSCAD">
			<function
				mainExpr="^[\t ]*module[\t ]+([\w]+)[\t ]*\(" 
				displayMode="$functionName$">
				
				<functionName>
					<nameExpr expr=" --[\w]*"/>
				</functionName>
				
			</function>
		</parser>
		
	</functionList>
</NotepadPlus>