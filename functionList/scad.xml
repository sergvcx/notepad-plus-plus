<NotepadPlus>			
	<functionList>
		<!-- ======================================================= [ OpenSCAD ] -->
		<parser id         ="scad_function" displayName="openscad">
			<function
				mainExpr="^\h*(module|function)\h+\w+\s*\(" 
				displayMode="$functionName$">
				
				<functionName>
					 <nameExpr expr="^\h*(module|function)\h+\K\w+"/>
				</functionName>
				
			</function>
		</parser>
		
	</functionList>
</NotepadPlus>