<NotepadPlus>			
	<functionList>
		<!-- ======================================================= [ NeuroMatrix ] -->
		<parser id         ="map" displayName="NeuroMatrixMap" commentExpr="((/\*.*?\*))">
			<function
				mainExpr="^(\.[\w\.]+)" 
				displayMode="$functionName$">
				<functionName>
					<nameExpr expr="[\.\w]*"/>
				</functionName>
				
			</function>
		</parser>
		
		
	</functionList>
</NotepadPlus>