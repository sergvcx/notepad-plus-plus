<NotepadPlus>			
	<functionList>
		<!-- ======================================================= [ NeuroMatrix ] -->
		<parser id         ="makrkdown_label" displayName="MarkDown" commentExpr="((/\*.*?\*))">
			<function
				mainExpr="(^#+\s+[\w\s]+)" 
				displayMode="$functionName$">
				<functionName>
					<nameExpr expr="[ \w]*"/>
				</functionName>
				
			</function>
		</parser>
		
		
	</functionList>
</NotepadPlus>