<NotepadPlus>			
	<functionList>
		<!-- ======================================================= [ NeuroMatrix ] -->
		<parser id         ="neuromatrix_label" displayName="NeuroMatrix" commentExpr="((/\*.*?\*))">
			<function
				mainExpr="(^[\t ]*&lt;[\w]+&gt;)|(^[\t ]*[\w]+:)" 
				displayMode="$functionName$">
				<functionName>
					<nameExpr expr="\w*"/>
				</functionName>
				
			</function>
		</parser>
		
		
	</functionList>
</NotepadPlus>